---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Message sent - Thank you very much">
  <main
    class="min-h-screen py-24 w-5/6 xl:w-4/5 mx-auto flex items-center justify-center"
  >
    <div class="text-center text-white">
      <div class="text-left"></div>

      <h3 class="text-3xl font-black mt-1">Message sent</h3>
      <p>
        Thank you for sending me a message, I will be notified asap with the
        message you sent...
      </p>

      <div class="mt-12">
        <small>
          <a href="/" class="hover:underline"> Return Home</a>
        </small>
      </div>
    </div>
  </main>
</Layout>
