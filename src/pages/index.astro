---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";

const discord = "joshue?#9999";
---

<script>
  const btnCopy = document.getElementById("copy-discord");
  if (btnCopy) {
    btnCopy.addEventListener("click", () => {
      navigator.clipboard.writeText("joshue?#9999");

      btnCopy.title = "Copied";
      setTimeout(() => {
        btnCopy.title = "Copy Discord Username";
      }, 3000);
    });
  }
</script>

<Layout title="Joshue Abance - Personal Website">
  <main
    class="min-h-screen py-24 w-5/6 mx-auto flex items-center justify-center"
  >
    <div class="text-white text-center">
      <Image
        src="https://avatars.githubusercontent.com/u/37932956?v=4"
        alt="Anna"
        width={100}
        height={100}
        format="png"
        class="rounded-full mx-auto"
      />

      <h1 class="text-4xl mt-8">
        Hello, I am <br class="md:hidden" />
        <span class="underline font-black">Joshue Abance</span>
      </h1>
      <p class="mt-4 text-xl">I code stuff for fun :)</p>

      <ul class="flex items-center justify-center mt-8">
        <li class="m-2">
          <a
            title="Github"
            href="https://github.com/TheBoringDude/"
            target="_blank"
            rel="noreferrer"
            class="group"
          >
            <img
              class="h-8 w-8 group-hover:scale-110 duration-300"
              src="https://cdn.simpleicons.org/github/white"
            />
          </a>
        </li>

        <li class="m-2">
          <a
            title="Twitter"
            href="https://twitter.com/joshabance"
            target="_blank"
            rel="noreferrer"
            class="group"
          >
            <img
              class="h-8 w-8 group-hover:scale-110 duration-300"
              src="https://cdn.simpleicons.org/twitter/white"
            />
          </a>
        </li>

        <li class="m-2">
          <button
            id="copy-discord"
            title="Copy Discord Username"
            class="group inline-flex items-center py-1 px-3 shadow rounded-full"
          >
            <img
              class="h-7 w-7"
              src="https://cdn.simpleicons.org/discord/white"
            />

            <span class="ml-2">{discord}</span>
          </button>
        </li>
      </ul>

      <hr class="my-6 border-stone-300/20" />

      <div class="flex items-center justify-center flex-wrap">
        <a
          title="My Works"
          href="/my-works"
          class="hover:bg-black/20 py-2 px-8 rounded-xl border-gray-300/20 hover:border-black/10 border duration-300 m-1"
        >
          My Works
        </a>

        <a
          title="Send Me a Message"
          href="/contact"
          class="hover:bg-black/20 py-2 px-8 rounded-xl border-gray-300/20 hover:border-black/10 border duration-300 m-1"
        >
          Contact Me
        </a>
      </div>
    </div>
  </main>
</Layout>
